{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@application/*": [
        "./src/application/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@test/*": [
        "./src/test/*"
      ],
    }
  }
}
