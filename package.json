{
  "name": "tech-challenge-frete-rapido",
  "version": "1.0.0",
  "description": "API integration to frete rapido APIs",
  "scripts": {
    "build": "tsc && tsc-alias",
    "commit": "git-cz",
    "husky:prepare": "husky install",
    "lint": "eslint \"./src/**/*.ts\" --fix",
    "lint:ci": "eslint \"./src/**/*.ts\"",
    "start": "node dist/server.js",
    "start:dev": "nodemon --watch 'src/' --exec 'ts-node src/server.ts' -e ts",
    "test": "jest --passWithNoTests",
    "test:cov": "npm test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest.e2e.config.js --passWithNoTests",
    "test:staged": "npm test --findRelatedTests",
    "test:watch": "npm test --watch"
  },
  "author": "Jean",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sonarjs": "^0.24.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": true
    }
  },
  "dependencies": {
    "express": "^4.19.2"
  }
}
